generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int    @id @default(autoincrement())
  name     String
  username String
  email    String
  password String
  role     String    @default("engineer")

  @@map("users")
}

model attendance {
  check_id   Int       @id @default(autoincrement())
  user_id    Int
  action     String
  check_time DateTime?
  latitude   String?
  longitude  String?
  remote     Int       @default(0)

  @@index([user_id])
  @@index([latitude])
  @@map("attendance")
}

model work_location {
  id             Int    @id @default(autoincrement())
  latitude       String?
  longitude      String?
  radiusinmeters String?

  @@map("work_location")
}

